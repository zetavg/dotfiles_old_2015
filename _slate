# Focus Bindings
bind l:cmd;shift    focus right
bind h:cmd;shift     focus left
bind k:cmd;shift       focus up
bind j:cmd;shift     focus down
bind m:cmd;shift   focus behind

# Move/Resize Window
bind j:cmd;shift;alt	move windowTopLeftX;windowTopLeftY+20 windowSizeX;windowSizeY
bind k:cmd;shift;alt	move windowTopLeftX;windowTopLeftY-20 windowSizeX;windowSizeY
bind h:cmd;shift;alt	move windowTopLeftX-20;windowTopLeftY windowSizeX;windowSizeY
bind l:cmd;shift;alt	move windowTopLeftX+20;windowTopLeftY windowSizeX;windowSizeY
bind m:cmd;shift;alt	move windowTopLeftX;windowTopLeftY windowSizeX;windowSizeY+26
bind ,:cmd;shift;alt	move windowTopLeftX;windowTopLeftY windowSizeX;windowSizeY-26
bind n:cmd;shift;alt	move windowTopLeftX;windowTopLeftY windowSizeX-26;windowSizeY
bind .:cmd;shift;alt	move windowTopLeftX;windowTopLeftY windowSizeX+26;windowSizeY

# Window Hints
bind esc:cmd hint
